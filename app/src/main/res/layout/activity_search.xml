<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/lly_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="44px"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/lly_left"
                android:layout_width="44px"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/id_leftBtnImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15px"
                    android:src="@drawable/back_icon" />

            </com.zhy.autolayout.AutoLinearLayout>

            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="5px"
                android:layout_marginRight="15px"
                android:textColorHint="@color/colord9d9d9"
                android:hint="请输入要搜索企业的名称"
                android:textSize="14px"
                android:paddingLeft="38px"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:background="@drawable/record_search_bg_icon"
                android:layout_gravity="center_vertical"
                android:layout_height="30px" />


        </com.zhy.autolayout.AutoLinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@color/colorBackground"

            ></android.support.v7.widget.RecyclerView>

    </com.zhy.autolayout.AutoLinearLayout>
</layout>