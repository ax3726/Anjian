<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:scrollbars="none">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/lly_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <com.zhy.autolayout.AutoFrameLayout
                android:id="@+id/fly_head_img"
                android:layout_width="match_parent"
                android:layout_height="170px"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px"
                android:layout_marginTop="11px"
                android:background="@drawable/record_img_bg_icon">

                <TextView
                    android:id="@+id/tv_add_tou"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="15px"
                    android:drawableTop="@drawable/record_add_img_icon"
                    android:gravity="center_horizontal"
                    android:text="点击添加场所照片"
                    android:textColor="@color/color4a4a4a"
                    android:textSize="14px" />


                <ImageView
                    android:id="@+id/img_tou"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:visibility="gone" />

            </com.zhy.autolayout.AutoFrameLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10px"
                android:background="@color/colorLine" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15px"
                android:paddingRight="15px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="场所名称"
                    android:textColor="@color/color4a4a4a"
                    android:textSize="16px" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="right"
                    android:hint="点击输入"
                    android:layoutDirection="rtl"
                    android:textColor="@color/color4a4a4a"
                    android:textColorHint="@color/colord9d9d9"
                    android:textSize="14px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15px"
                android:paddingRight="15px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所属区域"
                    android:textColor="@color/color4a4a4a"
                    android:textSize="16px" />

                <TextView
                    android:id="@+id/tv_jiedao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="right"
                    android:hint="请选择"
                    android:textColor="@color/color4a4a4a"
                    android:textColorHint="@color/colord9d9d9"
                    android:textSize="14px" />

                <ImageView
                    android:layout_width="5px"
                    android:layout_height="10px"
                    android:layout_marginLeft="8px"
                    android:src="@drawable/record_right_icon" />

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />



            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15px"
                android:paddingRight="15px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系人"
                    android:textColor="@color/color4a4a4a"
                    android:textSize="16px" />

                <EditText
                    android:id="@+id/et_contact_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="right"
                    android:hint="点击输入"
                    android:layoutDirection="rtl"
                    android:textColor="@color/color4a4a4a"
                    android:textColorHint="@color/colord9d9d9"
                    android:textSize="14px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15px"
                android:paddingRight="15px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系电话"
                    android:textColor="@color/color4a4a4a"
                    android:textSize="16px" />

                <EditText
                    android:id="@+id/et_contact_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="right"
                    android:hint="点击输入"
                    android:inputType="number"
                    android:layoutDirection="rtl"
                    android:textColor="@color/color4a4a4a"
                    android:textColorHint="@color/colord9d9d9"
                    android:textSize="14px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15px"
                android:paddingRight="15px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="场所类别"
                    android:textColor="@color/color4a4a4a"
                    android:textSize="16px" />

                <TextView
                    android:id="@+id/tv_manager"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="right"
                    android:hint="请选择"
                    android:textColor="@color/color4a4a4a"
                    android:textColorHint="@color/colord9d9d9"
                    android:textSize="14px" />

                <ImageView
                    android:layout_width="5px"
                    android:layout_height="10px"
                    android:layout_marginLeft="8px"
                    android:src="@drawable/record_right_icon" />

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />


            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:textSize="14px"
                android:text="保存"
                android:layout_marginLeft="20px"
                android:layout_marginTop="50px"
                android:layout_marginRight="20px"
                android:gravity="center"
                android:background="@drawable/shape_common_blue"
                android:textColor="@color/colorWhite"
                />



        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
</layout>