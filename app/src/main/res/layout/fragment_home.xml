<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/lly_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <ml.gsy.com.library.widget.flybanner.FlyBanner
                android:id="@+id/fb_head"
                android:layout_width="match_parent"
                android:layout_height="200px">


            </ml.gsy.com.library.widget.flybanner.FlyBanner>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_marginTop="7px"
                android:lineSpacingExtra="8px"
                android:text="评评人类历史上，曾经发生过太多惨重的事故，尤其是 进入工业时代以后……"
                android:textColor="@color/color4a4a4a"
                android:textSize="14px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8px"
                android:paddingTop="8px">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="56px"
                        android:layout_height="50px"
                        android:src="@drawable/home_anquan_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4px"
                        android:text="安全百科"
                        android:textColor="@color/color999999"
                        android:textSize="10px" />

                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="56px"
                        android:layout_height="50px"
                        android:src="@drawable/home_shipin_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4px"
                        android:text="视频百科"
                        android:textColor="@color/color999999"
                        android:textSize="10px" />

                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="56px"
                        android:layout_height="50px"
                        android:src="@drawable/home_shigu_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4px"
                        android:text="事故百科"
                        android:textColor="@color/color999999"
                        android:textSize="10px" />

                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="56px"
                        android:layout_height="50px"
                        android:src="@drawable/home_yinghuan_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4px"
                        android:text="隐患百科"
                        android:textColor="@color/color999999"
                        android:textSize="10px" />

                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="56px"
                        android:layout_height="50px"
                        android:src="@drawable/home_yingji_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4px"
                        android:text="应急百科"
                        android:textColor="@color/color999999"
                        android:textSize="10px" />

                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="11px"
                android:background="@color/colorBackground" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="6px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:paddingTop="6px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/home_shi_icon"
                    android:drawablePadding="20px"
                    android:gravity="center"
                    android:text="今日事项"
                    android:textColor="@color/colord2b2b2b"
                    android:textSize="18px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/img_right"
                    android:text="更多"
                    android:textColor="@color/colorAEAEAE"
                    android:textSize="12px" />

                <ImageView
                    android:id="@+id/img_right"
                    android:layout_width="12px"
                    android:layout_height="12px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/home_right" />

            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                android:paddingBottom="10px"
                android:paddingLeft="25px"
                android:paddingRight="20px"
                android:paddingTop="10px">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/home_house_icon" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12px"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="安评信息"
                        android:textColor="@color/colord2b2b2b"
                        android:textSize="16px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5px"
                        android:text="请与8月22号前检查"
                        android:textColor="@color/colorAEAEAE"
                        android:textSize="14px" />

                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待检查"
                        android:textColor="@color/colorC8241D"
                        android:textSize="16px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5px"
                        android:text="2018.08.20"
                        android:textColor="@color/colorAEAEAE"
                        android:textSize="14px" />

                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:background="@color/colorLine" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="6px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:paddingTop="6px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/home_news_icon"
                    android:drawablePadding="20px"
                    android:gravity="center"
                    android:text="新闻"
                    android:textColor="@color/colord2b2b2b"
                    android:textSize="18px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/img_right1"
                    android:text="更多"
                    android:textColor="@color/colorAEAEAE"
                    android:textSize="12px" />

                <ImageView
                    android:id="@+id/img_right1"
                    android:layout_width="12px"
                    android:layout_height="12px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/home_right" />

            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12px"
                android:paddingLeft="16px"
                android:paddingRight="14px"
                android:paddingTop="12px">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="世界上最惨烈的十大安全事故"
                        android:textColor="@color/colord2b2b2b"
                        android:textSize="16px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6px"
                        android:lineSpacingExtra="4px"
                        android:text="评评人类历史上，曾经发生过太多惨重 的事故，尤其是进入工业时代以后……"
                        android:textColor="@color/colorAEAEAE"

                        android:textSize="14px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <ImageView
                    android:layout_width="93px"
                    android:layout_height="70px" />


            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12px"
                android:paddingLeft="16px"
                android:paddingRight="14px"
                android:paddingTop="12px">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="世界上最惨烈的十大安全事故"
                        android:textColor="@color/colord2b2b2b"
                        android:textSize="16px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6px"
                        android:lineSpacingExtra="4px"
                        android:text="评评人类历史上，曾经发生过太多惨重 的事故，尤其是进入工业时代以后……"
                        android:textColor="@color/colorAEAEAE"

                        android:textSize="14px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <ImageView
                    android:layout_width="93px"
                    android:layout_height="70px" />


            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
</layout>