<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:scrollbars="none">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/lly_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoFrameLayout
                android:id="@+id/fly_img"
                android:layout_width="match_parent"
                android:layout_height="170px"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px"
                android:layout_marginTop="11px"
              >


                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:background="@drawable/fengxian_img_icon" />

            </com.zhy.autolayout.AutoFrameLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10px"
                android:background="@color/colorLine" />


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:gravity="center_vertical"
                android:orientation="horizontal"

                android:paddingLeft="15px"
                android:paddingRight="15px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="管控设施"
                    android:textColor="@color/color4a4a4a"
                    android:textSize="16px" />

                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_guan_you"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableLeft="@drawable/selector_radio_button"
                        android:drawablePadding="3dp"
                        android:text="有"
                        android:textColor="@color/colorAEAEAE"
                        android:textSize="12dp" />

                    <RadioButton
                        android:id="@+id/rb_guan_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="3dp"
                        android:button="@null"
                        android:drawableLeft="@drawable/selector_radio_button"
                        android:drawablePadding="3dp"
                        android:text="无"
                        android:textColor="@color/colorAEAEAE"
                        android:textSize="12dp" />

                </RadioGroup>


            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:gravity="center_vertical"
                android:orientation="horizontal"

                android:paddingLeft="15px"
                android:paddingRight="15px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应急装备"
                    android:textColor="@color/color4a4a4a"
                    android:textSize="16px" />

                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_ying_you"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableLeft="@drawable/selector_radio_button"
                        android:drawablePadding="3dp"
                        android:text="有"
                        android:textColor="@color/colorAEAEAE"
                        android:textSize="12dp" />

                    <RadioButton
                        android:id="@+id/rb_ying_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="3dp"
                        android:button="@null"
                        android:drawableLeft="@drawable/selector_radio_button"
                        android:drawablePadding="3dp"
                        android:text="无"
                        android:textColor="@color/colorAEAEAE"
                        android:textSize="12dp" />

                </RadioGroup>


            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:gravity="center_vertical"
                android:orientation="horizontal"

                android:paddingLeft="15px"
                android:paddingRight="15px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="管控台账"
                    android:textColor="@color/color4a4a4a"
                    android:textSize="16px" />

                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_zhang_you"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableLeft="@drawable/selector_radio_button"
                        android:drawablePadding="3dp"
                        android:text="有"
                        android:textColor="@color/colorAEAEAE"
                        android:textSize="12dp" />

                    <RadioButton
                        android:id="@+id/rb_zhang_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="3dp"
                        android:button="@null"
                        android:drawableLeft="@drawable/selector_radio_button"
                        android:drawablePadding="3dp"
                        android:text="无"
                        android:textColor="@color/colorAEAEAE"
                        android:textSize="12dp" />

                </RadioGroup>


            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15px"
                android:paddingRight="15px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="存在问题"
                    android:textColor="@color/color4a4a4a"
                    android:textSize="16px" />

                <TextView
                    android:id="@+id/tv_question"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="right"
                    android:hint="点击输入"
                    android:singleLine="true"
                    android:textColor="@color/color4a4a4a"
                    android:textColorHint="@color/colord9d9d9"
                    android:textSize="14px" />

            </com.zhy.autolayout.AutoLinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15px"
                android:paddingRight="15px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="风险辨识"
                    android:textColor="@color/color4a4a4a"
                    android:textSize="16px" />

                <TextView
                    android:id="@+id/tv_fengxian"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="right"
                    android:hint="点击查看"
                    android:singleLine="true"
                    android:textColor="@color/color4a4a4a"
                    android:textColorHint="@color/colord9d9d9"
                    android:textSize="14px" />

            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
</layout>